<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" charset="utf-8">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>실시간 드라마 채팅 TVTalk!</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="../css/materialize.min.css" media="screen,projection" />
    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="../js/materialize.min.js"></script>
    <script src="https://www.gstatic.com/firebasejs/3.3.2/firebase.js"></script>
</head>

<body>

    <ul class="collection with-header">
            <li class="collection-header"><h4>TVTalk Degub Apk</h4></li>
            <li class="collection-item"><div>Download<a class="apk-down secondary-content"><i class="material-icons">send</i></a></div></li>

          </ul>

   <script>
    var socket = io();

    socket.emit('check', 'tvtalk');
    socket.on('config', function(msg) {
        if(msg !='fail'){
            firebase.initializeApp(msg);

            var storageRef = firebase.storage().ref('android/app-debug.apk');

            storageRef.getDownloadURL().then(function(url) {
                $('.apk-down').attr('href', url);

                }, function(err){
                    alert("에러잡는중~"+err);
                });






        }else if(msg =='fail') alert("네트워크 상태가 원활하지 않습니다.");
    })

   </script>


</body>

</html>